{{#each posts}}
  <div>
    <h2>{{title}}</h2>
    <p>Created by {{user.username}} on {{createdAt}}</p>
    <p>{{content}}</p>
    <a href="/posts/{{id}}">View Post</a>
  </div>
{{/each}}

{{#if loggedIn}}
  <a href="/dashboard">Dashboard</a>
  <a href="/logout">Logout</a>
{{else}}
  <a href="/login">Login</a>
  <a href="/signup">Signup</a>
{{/if}}
